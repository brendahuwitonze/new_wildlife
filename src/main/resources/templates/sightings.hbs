{{#partial "content"}}
    <div class="views sightings">

        <h1>Sightings</h1>


        <div class="card m-2" style="background-color:rgb(109, 63, 3);">

            {{#if sightings}}
                <div class="col-md-3">
                    <h3>Time</h3>
                    {{#each sightings as |s|}}
                        <h3>{{s.time}}</h3>
                    {{/each}}
                </div>
                <hr>
                <div class="col-md-3">
                    <h3>Animals</h3>

                    {{#each animals as |a|}}
                        <h3>{{a}}</h3>
                    {{/each}}

                </div>

            {{else}}
                <h1>No sightings!! Create some <a href="/create/sighting">here</a> </h1>

            {{/if}}

        </div>
    </div>

{{/partial}}
{{> layout.hbs}}
